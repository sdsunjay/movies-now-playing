<% if @movies.try(:any?) %>
    <div class="row">
        <div class="card-columns">
          <% @movies.each do |movie| %>
            <%= render 'partials/movie', movie: movie %>
          <% end %>
        </div>
    </div>
<% else %>
    <article class="single-from-blog">
        <div class="blog-title">
            <h2>No movies added yet</h2>
        </div>
    </article>
<% end %>
